<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  <strong>本文:</strong>
  <% @posts.each do |post| %>
  <p>
  <%= post.name %>
  :<%= post.body %>
  </p>
  <% end %>
</p>

<%= form_with model:@post, url:posts_path, method: :post do |f| %>
  <% if @post.errors.any? %>
